@{
    Layout = null;
    var title = ViewData["Title"] ?? "Login Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="Secure login page for test account authentication using ICUTech SOAP API." />
    <title>@title</title>

    <link rel="stylesheet" href="~/css/custom-bootstrap.css" />
    <link rel="preconnect" href="https://cdn.jsdelivr.net" crossorigin>
    <link rel="dns-prefetch" href="https://cdn.jsdelivr.net">

    <style>
        body {
            padding-top: 40px;
            background-color: #f8f9fa;
            font-family: system-ui, sans-serif;
        }

        .container {
            max-width: 400px;
        }
    </style>
</head>
<body>
    <main class="container">
        @RenderBody()
    </main>
</body>
</html>
